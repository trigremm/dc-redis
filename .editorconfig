# .editorconfig

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[{.env,.env.*.sample}]
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[.gitignore]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
